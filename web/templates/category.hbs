{{#extend "layout"}}
{{#content "main"}}
<div class="my-8 p-5 font-sans max-w-[320px] mx-auto">
    {{bannerAd 
        link="https://codehooks.io" 
        image="https://codehooks.io/img/logo.svg" 
        text="Super-simple backend storage for your next project."
        linkText="Codehooks.io"
    }}
</div>
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
            <h1 class="card-title text-2xl mb-4">{{category}} <div class="badge badge-info">{{categoryFeatures.length}} listings</div></h1>
            
            <div class="flex flex-col gap-4">
                {{#each categoryFeatures}}
                <a href="/listing/{{categorySlug}}/{{slug}}" class="flex items-center gap-4 p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors cursor-pointer">
                    <div class="avatar">
                        <div class="w-16 h-16 rounded">
                            <img src="{{#if altImageUrl}}{{altImageUrl}}?cachebrk={{../cacheBreaker}}{{else}}/screenshot?url={{siteUrl}}&cachebrk={{../cacheBreaker}}{{/if}}" alt="{{title}}" />
                        </div>
                    </div>
                    <div class="flex-1">
                        <h2 class="text-lg font-semibold">{{this.title}}</h2>
                        <p class="text-sm opacity-70">{{this.content}}</p>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </div>
{{/content}}
{{/extend}}